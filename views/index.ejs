<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="UTF-8"/>
<title>Slide Puzzle</title>
<script type="text/javascript" src="//code.jquery.com/jquery-2.2.4.min.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet"/>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="/css/jquery.jqpuzzle.css"/>
<script type="text/javascript" src="/js/jquery.jqpuzzle.min.js"></script>
<meta name="viewport" content="width=device-width,initial-scale=1"/>

<meta name="viewport" content="width=device-width,initial-scale=1"/>
<meta name="apple-mobile-web-app-capable" content="yes"/>

<style type="text/css">
html, body{
  text-align: center;
  background-color: #fafafa;
  font-size: 20px;
  color: #333;
}
</style>
</head>
<body>

<div class="container center-block text-center">
	<img id="slidegame_img" class="jqPuzzle" src="<%= image_url %>"/>
</div>

<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr><th>name</th><th>seconds</th><th>moves</th><th>created</th></tr>
    </thead>
    <tbody id="scores_table_tbody">
    </tbody>
  </table>
</div>

<script>
//. jquery puzzle
var slide_settings = {
  rows: 4,
  cols: 4,
  hole: 16,
  shuffle: true,
  numbers: true,
  language: 'ja',
  control: {
    shufflePieces: false,
    confirmShuffle: true,
    toggleOriginal: true,
    toggleNumbers: true,
    counter: true,
    timer: true,
    pauseTimer: true
  },
  success: {
    fadeOriginal: false,
    callback: function( results ){
      var name = window.prompt( "クリアおめでとうございます！　記録用のお名前を入力してください: ", "" );
      if( name ){
        var moves = parseInt( results.moves );
        var seconds = parseInt( results.seconds );

        //alert( "name = " + name + ", results.moves = " + results.moves + ", results.seconds = " + results.seconds );
        postScore( name, seconds, moves );
      }
    },
    callbackTimeout: 300
  },
  animation: {
    shuffleRounds: 3,
    shuffleSpeed: 800,
    slidingSpeed: 200,
    fadeOriginalSpeed: 600
  },
  style: {
    gridSize: 2,
    overlap: true,
    backgroundOpacity: 0.1
  }
};
var slide_texts = {
  shuffleLabel: 'シャッフル',
  toggleOriginalLabel: '元画像',
  toggleNumbersLabel: '数値表示／非表示',
  confirmShuffleMessage: 'シャッフルしてよろしいですか？',
  movesLabel: '回',
  secondsLabel: '秒'
};

$(function(){
  var t = $('img.jqPuzzle');
  t.jqPuzzle( slide_settings, slide_texts );

  getItems();
});

function getScores(){
  $('#scores_table_tbody').html( '' );
  $.ajax({
    url: '/scores',
    type: 'GET',
    success: function( scores ){
      scores.forEach( function( score ){
        var tr = '<tr>'
          + '<td>' + score.name + '</td>'
          + '<td>' + score.seconds + '</td>'
          + '<td>' + score.moves + '</td>'
          + '<td>' + timestamp2datetime( score.created ) + '</td>'
          //+ '<td><a href="#" class="btn btn-danger" onClick="deleteScore(' + item.id  + ');">DELETE</a></td>'
          + '</tr>';
        $('#scores_table_tbody').append( tr );
      });
    },
    error: function( err ){
    }
  });
}

function deleteScore( id ){
  if( confirm( '本当にこのスコアを削除してもよろしいですか？' ) ){
    $.ajax({
      url: '/score/' + id,
      type: 'DELETE',
      success: function( result ){
        getScores();
      },
      error: function( err ){
      }
    });
  }
}

function postScore( name, seconds, moves ){
  var score = {
    name: name,
    seconds: seconds,
    moves: moves
  };
  $.ajax({
    url: '/score',
    type: 'POST',
    data: score,
    success: function( result ){
      getScores();
    },
    error: function( err ){
    }
  });
}

function timestamp2datetime( ts ){
  var dt = new Date( ts );
  var yyyy = dt.getFullYear();
  var mm = dt.getMonth() + 1;
  var dd = dt.getDate();
  var hh = dt.getHours();
  var nn = dt.getMinutes();
  var ss = dt.getSeconds();

  var datetime = yyyy
    + '-' + ( mm < 10 ? '0' : '' ) + mm
    + '-' + ( dd < 10 ? '0' : '' ) + dd
    + ' ' + ( hh < 10 ? '0' : '' ) + hh
    + ':' + ( nn < 10 ? '0' : '' ) + nn
    + ':' + ( ss < 10 ? '0' : '' ) + ss;
  return datetime;
}
</script>
</body>
</html>
